{
  "cSpell.words": [
    "controlgroup",
    "dryrun",
    "eleventy",
    "koin",
    "REBRANDLY",
    "shortlink",
    "slashtag",
    "templating"
  ],
  "editor.defaultFormatter": "Glavin001.unibeautify-vscode",
  "editor.formatOnSave": true,
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "formatFiles.excludedFolders": [
    "node_modules", ".git", "_site"
  ],
  "formatFiles.excludePattern": "*(package-lock.json|headers.liquid|sitemap.liquid)",
  "formatFiles.useGitIgnore": true,
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "markdownlint.config": {
    "front_matter_title": ""
  },
  "editor.tabSize": 2
}